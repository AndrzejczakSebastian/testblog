<div class="jumbotron">
  <h1>List of all comments</h1>
</div>

<ul>
  <% @comments.each do |comment| %>
    <li>
      <div class="row">
        <div class="col-sm-12 col-md-8"><%= link_to "#{comment.content}", comment_path(id: comment.id), class: 'btn btn-light'%></div>
        <div class="col-sm-12 col-md-2"><%= link_to 'Edit', edit_comment_path(id: comment.id), role: 'button', class: 'btn btn-primary' %></div>
        <div class="col-sm-12 col-md-2"><%= link_to 'Destroy', comment_path(id: comment.id), method: :delete, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-danger', remote: true  %></div>
      </div>
    </li>
  <% end %>
</ul>

<hr />
<%= link_to 'New comment', new_comment_path, role: 'button', class: 'btn btn-primary'  %>
