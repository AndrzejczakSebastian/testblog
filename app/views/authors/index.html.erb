<img style="display: none;" src="https://i.redd.it/ounq1mw5kdxy.gif"/>


<div class="jumbotron">
<h1>List of all authors</h1>
</div>

<div class="container authors">
  <% @authors.each do |author| %>
    <%= render 'author', author: author %>
  <% end %>
</div>
<hr />

<%= form_for @author, remote: true, format: :js, html: { class: "new-autor" }  do |f|%>
  <div calss="form-group">
    <%= f.label :name%>
    <%= f.text_field :name, placeholder: 'Enter name for author...' %>
  </div>
  <hr/>
  <div calss="form-group">
    <%= f.label :surname%>
    <%= f.text_field :surname, placeholder: 'Enter surname for author...' %>
  </div>
  <hr/>
  <div calss="form-group">
    <%= f.label :age%>
    <%= f.number_field :age, placeholder: 'Enter age for author...'  %>
  </div>
  <hr />
  <%= f.submit 'Save', role: 'button', class: 'btn btn-primary' %>
<% end %>
