<% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title%>
    <%= f.text_field :title, placeholder: 'Enter title for post...'  %>
  </div>
  <hr/>
  <div class="form-group">
    <%= f.label :content%>
    <%= f.text_field :content, placeholder: 'Enter content of post...' %>
  </div>
  <hr />
  <div class="form-group">
    <%= f.label :author_id%>
    <%= f.select :author_id, @authors_list,include_blank: true, required: true %>
  </div>
  <hr />
  <%= f.submit 'Save', role: 'button', class: 'btn btn-primary'  %>
<% end %>
