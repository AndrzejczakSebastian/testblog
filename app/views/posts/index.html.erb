<div class="jumbotron">
  <h1>List of all posts</h1>
</div>

<ul>
  <% @posts.each do |post| %>
    <li>
      <div class="row">
        <div class="col-sm-12 col-md-8"><%= link_to "#{post.title}", post_path(id: post.id), class: 'btn btn-light'%></div>
        <div class="col-sm-12 col-md-2"><%= link_to 'Edit', edit_post_path(id: post.id), role: 'button', class: 'btn btn-primary' %></div>
        <div class="col-sm-12 col-md-2"><%= link_to 'Destroy', post_path(id: post.id), method: :delete, data: { confirm: 'Are you sure?' }, role: 'button', class: 'btn btn-danger', remote: true  %></div>
      </div>
    </li>
  <% end %>
</ul>

<hr />
<%= link_to 'New post', new_post_path, role: 'button', class: 'btn btn-primary' %>
